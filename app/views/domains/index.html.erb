<p id="notice"><%= notice %></p>

<h1>Listing Domains</h1>

<table class="table">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Comment count</th>
    </tr>
  </thead>

  <tbody>
    <% @domains.sort_by{|d| d.comment_count*-1 }.each do |domain| %>
      <tr>
        <td><%= link_to domain.domain, domain %></td>
        <td><%= domain.comment_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
